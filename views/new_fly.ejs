<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.min.js"></script>
        <link rel="stylesheet" href="/../css/style.css">
        <link rel="stylesheet" href="/../css/bootstrap.min.css">
    </head>
<body>
  <nav class="nav-container">
  <ul class="menu">
  	<li><a href="/">Home</a></li>
  	<li><a href="/logout">Esci</a></li>
  </ul>
  </nav>
<h1>Crea nuovo volo</h1>

<div class="page-data">

    <form method="post" action="" id="the-form">
        <table cellpadding="11">

          <tr>
	          <td class="label">Tipo Volo</td><td>:
            	<select name="tipo_volo" id="tipo_volo">
            		<option value=""></option>
            	<% if(tutti.length){
	         		for(var i = 0;i < tutti.length;i++) { %>
						<option value="<%=tutti[i].id%>"><%=tutti[i].nome%></option>
					<% }
				} %>
				</select></td>
         </tr>

         <tr>
            <td class="label"></td>
	        <td>
    	        <input type="button" value="Submit" id="submit">
        	</td>
         </tr>
        </table>
    </form>
</div>
<div class="page-data">
     <ul class="err-area"></ul>
</div>

<script>
$(document).ready(function(){
    var id_checklist = '0';
    $("#submit").click(function(){
        id_checklist=$("#tipo_volo").val();

        $.post("http://localhost:3000/pilota/new/",{id_checklist:id_checklist},function(data){
            if(data==='done')
            {
            url = "/pilota/new_step/"+id_checklist;

                window.location.href= url;
            }
        });
    });
});
</script>
</body>
</html>

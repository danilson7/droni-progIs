<!DOCTYPE html>
<html>

<head>
    <title>
        <%=title%>
    </title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/../css/style.css">
    <link rel="stylesheet" href="/../css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.min.js"></script>
</head>

<body>
    <nav class="nav-container">
        <ul class="menu">
            <li><a href="/">Home</a></li>
            <li><a href="/logout">Esci</a></li>
        </ul>
    </nav>

    <center>

        <h1>Dettagli volo</h1>
        <% if(tutti.length){
        for(var i = 0;i < tutti.length;i++) { %>
            <div>
                <h2>Volo del: <%=tutti[i].data_volo%></h2>
                <%
            	if(livello_ut_globale == 1){ %>
                    <p>creato da:
                        <%=tutti[i].pilota_n%> -
                            <%=tutti[i].pilota_c%>
                    </p>
                    <%
            	}%>
            </div>
            <div>
                <h3>Sapr Utilizzati</h3>
                <%
        if(check.length){
            for(var j = 0;j < check.length;j++) {
            	if(check[j].tipo == '2' || check[j].tipo == '3' ){%>
                    <p>
                        <%=check[j].nome%>
                    </p>
                    <%
            	}
            }
        }else{} %>
            </div>
            <div>
                <div style="width:50%; float:left">
                    <h3>Check-element Pre volo</h3>
                    <%
            if(check.length){
            	for(var j = 0;j < check.length;j++) {
            		if(check[j].tipo == '0'){%>
                        <p>
                            <%=check[j].nome%>
                        </p>
                        <%
            		}
                }
            }else{} %>
                </div>
                <div style="width:50%; float:left">
                    <h3>Check-element Post volo</h3>
                    <%
            if(check.length){
            	for(var j = 0;j < check.length;j++) {
            		if(check[j].tipo == '1'){%>
                        <p>
                            <%=check[j].nome%>
                        </p>
                        <%
            		}
                }
            }else{} %>
                </div>
            </div>
            <br clear="all">
            <div>
                <div style="width:50%; float:left">
                    <h3>Note Pre volo</h3>
                    <%=tutti[i].note_pre%>
                </div>
                <div style="width:50%; float:left">
                    <h3>note Post volo</h3>
                    <%=tutti[i].note_post%>
                </div>
            </div><%
	        if(tutti[i].nome){ %>
                <div>
                    <h3>Osservatore:</h3>
                    <%=tutti[i].nome%> -
                        <%=tutti[i].cognome%>
                </div>
                <%
	            }else{ %>
                    <p>Nessun Osservatore Presente</p>
                    <%
    	        } %>
                <div>
                    <p>Volo terminato il:
                        <%=tutti[i].data_termine%>
                    </p>
                </div>
                <%
        if(tutti[i].coordinate){
            url = "https://maps.googleapis.com/maps/api/staticmap?markers=color:blue%7Clabel:A%7C";
            url = url + tutti[i].coordinate;
            url =  url + "&zoom=13&size=600x300&maptype=roadmap&key=AIzaSyApmH7iTEe82mmA3Sbr3oi5H5V_eWCz6ng";
          }
			%>
			<div><img src="<%=url%>"></div>
                <%

	}
	     }else{} %>


    </center>
</body>

</html>

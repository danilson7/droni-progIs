<!DOCTYPE html>
<html>

<head>
    <title>
        <%=title%>
    </title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.min.js"></script>
    <link rel="stylesheet" href="/../css/style.css">
    <link rel="stylesheet" href="/../css/bootstrap.min.css">
</head>

<body>
    <nav>
        <nav class="nav-container">
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/logout">Esci</a></li>
            </ul>
        </nav>
        <h1><%=title%></h1>

        <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Volo del</th>
                    <th>Dettagli</th>
                </tr>
                <% if(tutti.length){
            for(var i = 0;i < tutti.length;i++) { %>
                    <tr>
                        <td>
                            <%=(i+1)%>
                        </td>
                        <td>
                            <%=tutti[i].data_volo%>
                        </td>
                        <td>
                            <%
            if(livello_ut_globale == '2'){ %>
                                <a class="a-inside edit" href="/pilota_storico/visualizza/<%=tutti[i].id%>">Report</a>
                                <%
            }else if(livello_ut_globale == '3'){ %>
                                    <a class="a-inside edit" href="/osservatore_storico/visualizza/<%=tutti[i].id%>">Report</a>
                                    <%
            }else{ %>
                                        <a class="a-inside edit" href="/admin_storico/storico/<%=tutti[i].id%>">Report</a>
                                        <%
            } %>
                        </td>
                    </tr>
                    <% }

     }else{ %>
                        <tr>
                            <td colspan="5">No Data</td>
                        </tr>
                        <% } %>

            </table>
        </div>
</body>

</html>
